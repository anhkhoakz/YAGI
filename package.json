{
        "name": "yagi",
        "displayName": "YAGI - Yet Another GitIgnore",
        "description": "Smart .gitignore generator with auto-detection, template preview, and intelligent suggestions",
        "version": "0.1.3",
        "publisher": "anhkhoakz",
        "author": {
                "name": "anhkhoakz",
                "url": "https://www.anhkhoakz.dev/"
        },
        "license": "GPL-3.0-only",
        "icon": "assets/icon.png",
        "engines": {
                "node": "^24.10.0",
                "vscode": "^1.105.0"
        },
        "categories": [
                "Other",
                "Snippets",
                "Formatters"
        ],
        "keywords": [
                "gitignore",
                "git",
                "ignore",
                "templates",
                "generator",
                "auto-detect",
                "preview",
                "smart-suggestions",
                "project-detection",
                "cursor",
                "vscode",
                "vscodium"
        ],
        "activationEvents": [
                "onStartupFinished",
                "onCommand:yagi.generateGitignore",
                "onCommand:yagi.previewGitignore",
                "onCommand:yagi.clearCache"
        ],
        "capabilities": {
                "virtualWorkspaces": true,
                "untrustedWorkspaces": {
                        "supported": true
                }
        },
        "main": "./dist/extension.js",
        "contributes": {
                "commands": [
                        {
                                "command": "yagi.generateGitignore",
                                "title": "YAGI: Generate .gitignore",
                                "category": "YAGI",
                                "icon": "$(file-code)"
                        },
                        {
                                "command": "yagi.previewGitignore",
                                "title": "YAGI: Preview .gitignore Templates",
                                "category": "YAGI",
                                "icon": "$(preview)"
                        },
                        {
                                "command": "yagi.clearCache",
                                "title": "YAGI: Clear Cache",
                                "category": "YAGI",
                                "icon": "$(trash)"
                        }
                ],
                "configuration": {
                        "title": "YAGI",
                        "properties": {
                                "yagi.templateListTtl": {
                                        "type": "number",
                                        "default": 86400000,
                                        "minimum": 0,
                                        "description": "Cache duration for template list in milliseconds (default: 24 hours)",
                                        "markdownDescription": "Time to live for template list cache in milliseconds. Set to `0` to disable caching."
                                },
                                "yagi.gitignoreCacheTtl": {
                                        "type": "number",
                                        "default": 3600000,
                                        "minimum": 0,
                                        "description": "Cache duration for gitignore content in milliseconds (default: 1 hour)",
                                        "markdownDescription": "Time to live for gitignore content cache in milliseconds. Set to `0` to disable caching."
                                },
                                "yagi.maxCacheSize": {
                                        "type": "number",
                                        "default": 100,
                                        "minimum": 1,
                                        "maximum": 1000,
                                        "description": "Maximum number of cached gitignore templates (default: 100)",
                                        "markdownDescription": "Maximum number of cached gitignore templates. Older entries are automatically removed when limit is reached."
                                },
                                "yagi.defaultTemplates": {
                                        "type": "array",
                                        "items": {
                                                "type": "string"
                                        },
                                        "default": [],
                                        "description": "Templates to always pre-select (e.g., [\"node\", \"vscode\", \"macos\"])",
                                        "markdownDescription": "Array of template names to automatically pre-select when generating `.gitignore`. These will be selected in addition to auto-detected templates."
                                },
                                "yagi.customApiEndpoint": {
                                        "type": "string",
                                        "default": null,
                                        "description": "Custom API endpoint for gitignore templates",
                                        "markdownDescription": "Custom API endpoint for gitignore templates. Leave empty to use default Toptal API: `https://www.toptal.com/developers/gitignore/api`"
                                },
                                "yagi.customGitignorePath": {
                                        "type": "string",
                                        "default": ".gitignore",
                                        "description": "Custom path for .gitignore file (relative to workspace root)",
                                        "markdownDescription": "Custom path for `.gitignore` file relative to workspace root. Default: `.gitignore`"
                                }
                        }
                }
        },
        "scripts": {
                "vscode:prepublish": "bun run package",
                "compile": "webpack",
                "watch": "webpack --watch",
                "package": "webpack --mode production --devtool hidden-source-map",
                "compile-tests": "tsc -p . --outDir out",
                "watch-tests": "tsc -p . -w --outDir out",
                "pretest": "bun run compile-tests && bun run compile && bun run lint",
                "lint": "biome lint src/ --write --unsafe",
                "format": "biome format src/ --write",
                "test": "vscode-test"
        },
        "repository": {
                "type": "git",
                "url": "https://github.com/anhkhoakz/YAGI.git"
        },
        "homepage": "https://github.com/anhkhoakz/YAGI#readme",
        "bugs": {
                "url": "https://github.com/anhkhoakz/YAGI/issues"
        },
        "galleryBanner": {
                "color": "#1e1e1e",
                "theme": "dark"
        },
        "badges": [
                {
                        "url": "https://img.shields.io/visual-studio-marketplace/d/anhkhoakz.yagi",
                        "href": "https://marketplace.visualstudio.com/items?itemName=anhkhoakz.yagi",
                        "description": "Visual Studio Marketplace Downloads"
                },
                {
                        "url": "https://img.shields.io/open-vsx/dt/anhkhoakz/yagi",
                        "href": "https://open-vsx.org/extension/anhkhoakz/yagi",
                        "description": "Open VSX Downloads"
                }
        ],
        "devDependencies": {
                "@biomejs/biome": "^2.2.6",
                "@types/mocha": "^10.0.10",
                "@types/node": "^24.7.2",
                "@types/sinon": "^17.0.4",
                "@types/vscode": "^1.105.0",
                "@typescript-eslint/eslint-plugin": "^8.46.1",
                "@typescript-eslint/parser": "^8.46.1",
                "@vscode/test-cli": "^0.0.12",
                "@vscode/test-electron": "^2.5.2",
                "eslint": "^9.37.0",
                "sinon": "^21.0.0",
                "ts-loader": "^9.5.4",
                "typescript": "^5.9.3",
                "webpack": "^5.102.1",
                "webpack-cli": "^6.0.1"
        },
        "trustedDependencies": [
                "@biomejs/biome"
        ],
        "engineStrict": false,
        "private": false
}
